<h2>Adicionar Produto</h2>

<form method="post">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input class="form-control" type="text" name="nome" id="nome" value="@Model.Nome" autofocus />
    </div>

    <div class="form-group">
        <label for="preco">Preço:</label>
        <input class="form-control" type="text" name="preco" id="preco" value="@Model.Preco" />
    </div>

    <div class="form-group">
        <label for="tipo">Tipo:</label>
        <input class="form-control" type="text" name="tipo" id="tipo" value="@Model.Tipo" />
    </div>

    <div class="form-group">
        <label for="quantidade">Quantidade:</label>
        <input class="form-control" type="text" name="quantidade" id="quantidade" value="@Model.Quantidade" />
    </div>

    <div class="form-group">
        <button class="btn btn-outline-info">Salvar</button>
        <a class="btn btn-outline-secondary" href="~/Produtos">Cancelar</a>
    </div>

</form>